{
  "manifest_version": 3,
  "name": "Tomo AI",
  "version": "1.0.0",
  "description": "Real-Time Interview Companion for Recruiters",
  "permissions": [
    "sidePanel",
    "tabCapture",
    "tabs",
    "activeTab",
    "audioCapture"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "host_permissions": [
    "<all_urls>",
    "http://localhost:3001/*"
  ],
  "action": {},
  "side_panel": {
    "default_path": "sidepanel.html"
  }
}
